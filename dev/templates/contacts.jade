extends _layout
block content
	main.main-content
		.container
			h1.contacts__title Контакты
			.map-wrapper
				#map
			.contacts__list
				.contacts__list-item(style="background-image: url(img/cpage1.png)")
					p.contacts__list-title Телефон | Факс
					a.contacts__list-description(href="tel:+74951503993") +7 (495) 150-39-93
				.contacts__list-item(style="background-image: url(img/cpage2.png)")
					p.contacts__list-title E-mail
					a.contacts__list-description(href="mailto:info@navicadata.ru") info@navicadata.ru
				.contacts__list-item(style="background-image: url(img/cpage3.png)")
					p.contacts__list-title Адрес
					span.contacts__list-description г. Москва, 109028, ул. Земляной Вал,  50А/8 с2
			form.contacts-page__form
				.contacts__form
					.contacts__form-col
						input.contacts__form-input(type="text" placeholder="Имя")
						input.contacts__form-input(type="tel" placeholder="Телефон")
						input.contacts__form-input(type="email" placeholder="Email")
					.contacts__form-col
						textarea.contacts__form-input(placeholder="Сообщение")
				input.btn(type="submit" value="Отправить")






